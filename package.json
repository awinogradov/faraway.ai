{
  "name": "faraway.ai",
  "description": "Faraway AI",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Anton Vinodradov <winogradovaa@gmail.com>",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "scripts": {
    "test": "razzle test --env=jsdom",
    "build": "razzle build",
    "start": "razzle start",
    "prestage": "npm run container:build",
    "stage": "docker run -p 3000:3000 -e PORT=3000 farawayai",
    "precontainer:build": "npm run build",
    "container:build": "docker build -t farawayai .",
    "precontainer:push": "npm run container:build",
    "container:push": "heroku container:push web -a farawayai",
    "precontainer:publish": "npm run container:push",
    "container:publish": "heroku container:release web -a farawayai",
    "production": "NODE_ENV=production node build/server.js",
    "deploy": "npm run container:publish"
  },
  "dependencies": {
    "await-to-js": "2.1.1",
    "body-parser": "1.19.0",
    "clipboard-polyfill": "2.8.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "4.16.4",
    "firebase-tools": "6.10.0",
    "helmet": "3.16.0",
    "morgan": "1.9.1",
    "parse-error": "0.2.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-fetch-hook": "1.6.2",
    "react-router-dom": "5.0.0",
    "really-typed-compose": "1.0.1",
    "unfetch": "4.1.0",
    "universal-cookie": "4.0.0",
    "uuid": "3.3.2",
    "validator": "11.0.0",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/chai": "4.1.7",
    "@types/chai-subset": "1.3.2",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.5",
    "@types/express": "4.16.1",
    "@types/faker": "4.1.5",
    "@types/helmet": "0.0.43",
    "@types/jest": "24.0.12",
    "@types/morgan": "1.7.35",
    "@types/node": "12.0.0",
    "@types/node-fetch": "2.3.3",
    "@types/react": "16.8.16",
    "@types/react-dom": "16.0.5",
    "@types/react-router-dom": "4.3.3",
    "@types/supertest": "2.0.7",
    "@types/uuid": "3.4.4",
    "@types/validator": "10.11.1",
    "@types/webpack-env": "1.13.9",
    "@types/ws": "6.0.1",
    "chai": "4.2.0",
    "chai-subset": "1.6.0",
    "faker": "4.1.0",
    "razzle": "3.0.0",
    "razzle-plugin-typescript": "3.0.0",
    "shelljs": "0.8.3",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-react": "4.0.0",
    "typescript": "3.5.2"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(ts|js)?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  }
}
